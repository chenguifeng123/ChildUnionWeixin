@import "../common/messageReplyTemp.wxss";

page{
  margin-top: 0px;
  background-color: #eee;
}

.reply-bannber{
  margin:10px;
  font-size:0.8em;
}

.content, .reply-content{
  background-color: white;
  padding: 5px;
}

.title{
  font-size: 1.3em;
  font-weight: bold;
  word-break: break-all;
}

.message-photo{
  width: 80rpx;
  height: 80rpx;
  margin: 0;
  border-radius: 50%;
  margin-top:5px;
}

.message-left-info, .message-right-info{
  display: inline-block;
  margin-left: 5px;
}

.message-right-info{
  font-size: 0.95em;  
}

.name-text{
  color: #1d6eaf
}

.message-company-info{
  font-size: 0.75em;
  color:#999;
}
/*
.company-text{
  width: 70%;
}

.last-text{
  margin-left: 5%;
}
*/

.message{
  margin-top: 20px;
  display: flex;
  flex-flow: row wrap;
  align-content: space-around;
  font-size: 0.8em;
}

.bottom-button{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 42px;
  background-color: white;
  border-top:thick #c6c6c6;
  
}

.bottom-left-button, .bottom-middle-button, .bottom-right-button{
  /*width: 45%;*/
  display: inline-block;
  text-align: center;
}

.bottom-left-button{
  width: 30%;
}

.bottom-middle-button{
  width: 35%;
  color: #018fd1;
  font-size: 1em;
}

.bottom-right-button{
  width: 35%;
}

.bottom-class{
  height: 100%;
  font-size: 1em;
}

.bottom-img{
  width: 20px;
  height: 20px;
  padding-bottom:5px;
  vertical-align: middle;
}

.bottom-right-img{
  width: 100px;
  height: 33px;
  padding-bottom:5px;
  vertical-align: middle;
}

.bottom-txt{
  color: #666666;
  padding-top:0px;
}

.middle-bottom-txt{
  color: #018fd1;
  padding-top:0px;
}

.bottom-class::after{
  border: 0rpx;
  font-size: 1em;
}

.text-message{
  word-break:break-all; 
}

.weui-media-box{
  border-bottom-style:solid;
  border-bottom-width:1px;
  border-bottom-color: #eee;
}

.weui-media-box__desc{
  -webkit-line-clamp:initial;
}