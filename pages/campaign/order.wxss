.page, page{
  background-color: #eee;
}

.main-panel, .pay-list, .cost-panel{
  background-color: white;
}

.main-panel{
  padding: 10px;
  padding-top:20px;
  
}

.cost-panel{
  margin-top: 5px;
  padding: 10px;
}

.one-line{
  padding: 5px 5px 0px 5px;
}

.left-txt,.right-txt{
  display: inline-block;
  font-size: 0.8em;
}

.left-txt{
  margin-top: 10px;
  text-align: left;
  color:rgba(156, 155, 155, 0.747);
}

.right-txt{
  margin-top: 10px;
  text-align: right;
  float:right;
  color: black;
}

.pay-txt{
  margin-top: 10px;
  text-align: right;
  float:right;
  color: red;
  font-size:  1em;
}

.pay-title{
  margin-top: 20px;
}

.pay-list{
  height: 60px;
}

.pay-left, .pay-right{
  display: inline-block;
  padding-top: 10px;
  padding-bottom: 10px;
}

.pay-left{
  width: 80%;
}

.pay-right{
  width: 20%;
}

.pay-left-img{
  padding-left: 10px;
  text-align: left;
  width:40px;
  height:40px;
}

.pay-right-img{
  width:25px;
  height:25px;
  text-align: right;
  padding-bottom: 10px;
}

.confirm-btn{
  margin-top: 30px;
  text-align: center;
  width: 80%;
  color: white;
  background-color: rgb(253, 207, 1);
}

.charge-txt-view{
  padding-top: 20px;
  text-align: center;
}
.charge-txt{
  color: rgb(5, 5, 5);
  font-size: 0.9em;
}

.charge-btn{
  margin-top: 10px;
  text-align: center;
  width: 80%;
  color: white;
  background-color: rgb(60, 184, 233);
}

.invite{
  margin-top: 10px;
  margin-left: 0px;
  margin-right: 0px;
}
.invite-img{
  width: 100%;
  height: 120px;
}