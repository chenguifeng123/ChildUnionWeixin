@import "../common/orderTemp.wxss";

.page, page{
  background-color: #eee;
}

.main-panel, .pay-list{
  background-color: white;
}

.main-panel{
  padding-top:20px;
}

.one-line{
  padding-left: 5px;
  padding-right: 5px;
}

.one-order{
  margin-top: 10px;
  margin-bottom: 10px;
  background-color: white;
}

.left-txt,.right-txt{
  display: inline-block;
  font-size: 0.8em;
}

.left-txt{
  text-align: left;
}

.right-txt{
  text-align: right;
  float:right;
  color: rgb(253, 207, 1);
}

.re-pay{
  width: 100%;
  background-color: rgb(253, 207, 1);
  color: white;
  margin-bottom: 10px;
}

.detail-msg{
  font-size: 0.8em;
}

.order-detail{
  background-color: white;
}

.detail-title{
  margin-left: 5px;
  border-left-color: rgb(52, 129, 231);
  border-left-width: 5px;
  border-left-style: solid;
}

.call-btn{
  border-top-color:#eee;
  border-top-width:1px;
  border-top-style:solid;
  text-align: center;
  padding-bottom: 5px;
  padding-top: 5px;
}

.call-image{
  width: 20px;
  height: 20px;
}