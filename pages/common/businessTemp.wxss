.one-business{
  margin-left: 5px;
  background-color: white;
}

.business-photo{
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.business-left-info, .business-middle-info, .business-right-info{
  display: inline-block;
  margin-bottom: 5px;
}

.business-left-info{
  width: 25%;
}

.business-middle-info{
  width: 55%;
}

/*
.business-right-info{
  width: 20%;
}
*/

.business-desc-info{
  margin: 0px;
}

.business-name{
  font-size: 0.9em;
}

.business-job{
  font-size:0.7em;
}

.business-name, .business-job, .business-company{
    overflow: hidden;
    white-space: nowrap;
    text-overflow:ellipsis;
}

.business-name, .business-job{
  width: 45%;
}

.business-button-info{
  margin: 0px;
}

.business-btn-tag{
  color: white;
  font-size: 0.65em;
  height: 20px;
  display: inline-block;
  line-height: 1.5;
  padding-left: 2px;
  padding-right: 2px;
  margin-left: 2px;
}

.tag1{
  background-color: rgb(128, 214, 127);
}

.tag2{
  background-color: rgb(242, 184, 121);
}

.tag3{
  background-color:rgb(137, 218, 199);
}

.default-tag, .default-tag::after{
  border: none;
}

.business-btn-not-follow, .business-btn-follow{
  font-size:0.7em;
  border-radius:0px;
  padding-left:10px;
  padding-right: 10px;
  margin-bottom: 30%;
}

.business-btn-not-follow{
  background-color: rgb(2, 143, 215);
  color: white;
}

.business-btn-follow{
  background-color: rgb(238, 238, 238);
}